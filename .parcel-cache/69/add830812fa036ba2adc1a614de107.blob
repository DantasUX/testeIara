/* Colors */
.fill--gray0 {
  background-color: #0E0E0E;
}

.fill--gray1 {
  background-color: #212121;
}

.fill--gray2 {
  background-color: #2B2B2C;
}

.fill--gray3 {
  background-color: #3A3A3A;
}

.fill--red {
  background-color: #FF4757;
}

.fill--red--light {
  background-color: #FFA3AF;
}

.text--white {
  color: #FFFFFF;
}

.text--gray {
  color: #A0A0A0;
}

.text--gray strong {
  color: #FFFFFF;
  font-weight: 500;
}